---
---
{% assign idx = 0 %}{% assign count = 0 %}{% for pst in site.categories.mobile %}{% if pst.lang == 'en' %}{% if pst.version == 1 %}{% assign count = count | plus: '1' %}{% endif %}{% endif %}{% endfor %}{
  "mobile": {
    "version" : {{ site.version }},
    "data":[{% for post in site.categories.mobile %}{% if post.lang == 'en' %}{% if post.version == 1 %}{% assign idx = idx | plus: '1' %}
    {
      "id" : "{{post.slug}}",
      "lang" : "{{post.lang}}",
      "type" : "{{post.type}}",
      "title" : "{{post.title}}",{% if post.introduction %}
      "introduction" : "{{post.introduction}}",{% endif %}{% if post.warning %}
      "warning" : "{{post.warning}}",{% endif %}{% if post.component %}
      "component" : "{{post.component}}",{% endif %}{% if post.action %}
      "action" : {{post.action | jsonify}},{% endif %}{% if post.items %}
      "items" : {{post.items | jsonify }},{% endif %}
      "content" : "{{post.content | strip_newlines}}"
    }{% unless idx == count %},{% endunless %}{% endif %}{% endif %}{% endfor %}]
  }
}