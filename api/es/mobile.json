---
---
{
  "mobile": {
    "version" : {{ site.version }},
    "data":[{% for post in site.categories.mobile %}{% if item.lang == 'es' %}
     {
      "id" : "{{post.slug}}",
      "lang" : "{{post.lang}}",
      "type" : "{{post.type}}",
      "title" : "{{post.title}}",{% if post.introduction %}
      "introduction" : "{{post.introduction}}",{% endif %}{% if post.warning %}
      "warning" : "{{post.warning}}",{% endif %}{% if post.component %}
      "component" : "{{post.component}}",{% endif %}
      "action" : {
        "title" : "{{post.action.title}}",
        "link" : "{{post.action.link}}"
      },
      "items" : [{% for item in post.items %}
        {
          "title": "{{item.title}}",
          "link": "{{item.link}}"
        }{% unless forloop.last %},{% endunless %}
        {% endfor %}],
      "content" : "{{post.content | strip_newlines}}"
    }{% unless forloop.last %},{% endunless %}
    {% endif %}{% endfor %}]
  }
}