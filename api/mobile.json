---
---
{
  "mobile": {
    "version" : {{ site.version }},
    "data":[{% for post in site.categories.mobile %}
     {
      "id" : "{{post.id}}",
      "title" : "{{post.title}}",
      "action" : {
        "title" : "{{post.action.title}}",
        "link" : "{{post.action.link}}"
      },
      "items" : [{% for item in post.items %}
        {
          "title": "{{item.title}}",
          "link": "{{item.link}}"
        }{% unless forloop.last %},{% endunless %}
        {% endfor %}],
      "content" : "{{post.content | strip_newlines}}"
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}]
  }
}